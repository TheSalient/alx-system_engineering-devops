#!/usr/bin/env bash
# a Bash script that displays Best School 10 times using until.
i=1
while ((i <= 20))
do
    case $i in

    4)  echo $i
        echo "bad luck from China"
        ;;
    9)  echo $i
        echo "bad luck from Japan"
        ;;
    17) echo $i
        echo "bad luck from Italy"
        ;;
    *) echo $i
        ;;

    esac
    i=$((i + 1))
done
